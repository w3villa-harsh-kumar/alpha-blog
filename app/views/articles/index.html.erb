<h1>All Articles</h1>

<table>
<thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Author</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
</thead>
<tbody>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= article.author %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
            <td><%= button_to 'Delete', article_path(article), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>   
</tbody>

</table>

<%= link_to 'Create a new Article', new_article_path %>